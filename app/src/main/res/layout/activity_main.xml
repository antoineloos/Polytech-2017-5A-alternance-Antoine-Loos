<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.polytech.epulapp.tpandroidpolytech.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_space_height" />
            <TextView
                android:id="@+id/Offlinetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textblock_size"
                android:text="@string/offline" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"

                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="@string/unvsia" />

                <Button
                    android:id="@+id/unvsunBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="right"
                    android:layout_weight="1"

                    android:text="@string/unvsun" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_height" />

            <TextView
                android:id="@+id/Onlinetxt"
                android:textSize="@dimen/textblock_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/online" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/unvsvunol" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>
